<body>
    <h1>Chat with <%= receiver.username %></h1>

    <input type="hidden" id="chatId" value="<%= chatId %>">

    <input type="hidden" id="sendId" value="<%= sender._id %>">
    <input type="hidden" id="recvId" value="<%= receiver._id %>">
    <input type="text" name="message-input" id="message-input">

    <script src="/socket.io/socket.io.js"></script>

    <button type="button" id="send-button" onclick="sendMessage()">Send</button>

    

    <script defer src="../script.js"></script>
</body>

</html>